{
    "name": "typhoon/type",
    "description": "Typhoon Type",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42.0",
        "friendsofphp/php-cs-fixer": "^3.50.0",
        "phpstan/phpstan": "^1.11@dev",
        "phpunit/phpunit": "^10.5.10",
        "phpyh/coding-standard": "^2.6.0",
        "phpyh/psalm-tester": "^0.1.0",
        "symfony/var-dumper": "^6.0 || ^7.0.3",
        "typhoon/psalm-plugin": "^0.1.0",
        "vimeo/psalm": "^5.22.2"
    },
    "autoload": {
        "psr-4": {
            "Typhoon\\Type\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Typhoon\\Type\\": [
                "dev/",
                "tests/"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "fixcs": "vendor/bin/php-cs-fixer fix --diff --verbose",
        "phpstan": "vendor/bin/phpstan --verbose",
        "pre-command-run": "mkdir -p var",
        "psalm": "psalm --show-info --no-diff",
        "test": "phpunit",
        "type-matcher-generate": "@php dev/TypeMatcherGenerator/generate.php",
        "type-matcher-validate": "@php dev/TypeMatcherGenerator/validate.php"
    }
}
